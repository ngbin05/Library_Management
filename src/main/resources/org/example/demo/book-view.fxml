<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.demo.BookController">
   <children>
      <TextField fx:id="searchTextField" layoutX="75.0" layoutY="63.0" onAction="#initialize" prefHeight="25.0" prefWidth="343.0" promptText="Search" />
      <Button layoutX="427.0" layoutY="63.0" mnemonicParsing="false" onAction="#searchBook" text="Search" />
      <ImageView fx:id="bookImageView" fitHeight="178.0" fitWidth="138.0" layoutX="75.0" layoutY="112.0" pickOnBounds="true" preserveRatio="true" />
      <Label fx:id="bookTitleLabel" layoutX="247.0" layoutY="112.0" prefHeight="17.0" prefWidth="229.0" text="title">
         <font>
            <Font name="Arial" size="16.0" />
         </font></Label>
      <Label fx:id="authorLabel" layoutX="247.0" layoutY="145.0" prefHeight="17.0" prefWidth="229.0" text="author" />
      <Label fx:id="publishedDateLabel" layoutX="247.0" layoutY="200.0" prefHeight="17.0" prefWidth="229.0" text="ngay xuat ban" />
      <Region fx:id="bookInfoContainer" layoutX="68.0" layoutY="100.0" prefHeight="200.0" prefWidth="461.0" />
      <Button fx:id="addButton" layoutX="405.0" layoutY="360.0" mnemonicParsing="false" onAction="#addBook" text="Thêm sách" />
      <Label fx:id="publisherLabel" layoutX="247.0" layoutY="175.0" prefHeight="17.0" prefWidth="229.0" text="nha xuat ban" />
      <Label fx:id="genreLabel" layoutX="247.0" layoutY="224.0" prefHeight="17.0" prefWidth="229.0" text="the loai" />
      <Label fx:id="isbnLabel" layoutX="247.0" layoutY="248.0" text="isbn" />
      <Label fx:id="bookError" layoutX="75.0" layoutY="300.0" text="Sách này đã có trong thư viện!" textFill="#d00404">
         <font>
            <Font size="13.0" />
         </font></Label>
      <Label fx:id="addSuccessLabel" layoutX="76.0" layoutY="324.0" text="Thêm sách thành công!" textFill="#ce0303">
         <font>
            <Font size="13.0" />
         </font>
      </Label>
      <ProgressIndicator fx:id="loadingIndicator" layoutX="14.0" layoutY="14.0" prefHeight="20.0" prefWidth="20.0" />
   </children>
</AnchorPane>
